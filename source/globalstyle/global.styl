/*==========================================================
Global variables and styles
==========================================================*/
canvas-size = 300px

/*==========================================================
CD color variables
==========================================================*/
color-dark = #012
color-dark-bg = alpha(color-dark, 0.9)
color-light-bg = alpha(color-dark, 0.3)
// color-light-bg = white
// :root
//     --path-fill: orange
//     --path-stroke: black


/*==========================================================
Font
==========================================================*/
@font-face
    font-family: "SourceSans Pro"
    src: url("/font/SourceSansPro-Regular.ttf")

/*==========================================================
CD global font styles
==========================================================*/
body
    color: color-dark
    font-family: "SourceSans Pro", sans-serif

/*==========================================================
CD font styles
==========================================================*/
// H1 HEADLINE 17pt Laufweite 200
h1
    font-size: 17pt
    letter-spacing: 3.4pt
    text-transform: uppercase
    margin-bottom 30px
// H2 Headline 15pt Laufweite 200
h2
    font-size: 15pt
    letter-spacing: 3pt
    margin-bottom 20px
// Text 12pt Laufweite 0
p
    font-size: 12pt
    letter-spacing: normal
    margin-bottom 10px

/*==========================================================
Global Element Style
==========================================================*/

.image-block
    width: 100%
    position relative
    padding-bottom 10px
    box-sizing: border-box
    background-color color-dark-bg
    height canvas-size + 10px

.center-absolute-x
    position absolute
    left 50%
    transform translateX(-50%)

.center-absolute-xy
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)

.center-absolute-y
    position absolute
    top 50%
    transform translateY(-50%)

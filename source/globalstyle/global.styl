/*==========================================================
Global variables and styles
==========================================================*/
canvas-size = 300px

/*==========================================================
CD color variables
==========================================================*/
color-dark = #012

// :root
//     --path-fill: orange
//     --path-stroke: black


/*==========================================================
Font
==========================================================*/
@font-face
    font-family: "SourceSans Pro"
    src: url("/font/SourceSansPro-Regular.ttf")

/*==========================================================
CD global font styles
==========================================================*/
body
    color: color-dark
    font-family: "SourceSans Pro", sans-serif

/*==========================================================
CD font styles
==========================================================*/
// H1 HEADLINE 17pt Laufweite 200
h1
    font-size: 17pt
    letter-spacing: 3.4pt
    text-transform: uppercase
    margin-bottom 30px
// H2 Headline 15pt Laufweite 200
h2
    font-size: 15pt
    letter-spacing: 3pt
    margin-bottom 20px
// Text 12pt Laufweite 0
p
    font-size: 12pt
    letter-spacing: normal
    margin-bottom 10px

/*==========================================================
Global Element Style
==========================================================*/

.image-block
    width: 100%
    margin-top 20px
    margin-bottom: 20px
    position relative
    height canvas-size

.center-absolute-x
    position absolute
    top 0
    left 50%
    transform translateX(-50%)

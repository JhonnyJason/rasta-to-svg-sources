// filtercontrolsstyle styles
track-color = color-dark-bg
thumb-color = color-dark
track-height = 3px
thumb-height = 10px
thumb-width = 7px


.filter-controls
    .line
        padding: 0 5px
        margin auto
        text-align: center


    button
        box-sizing: border-box
        border none
        outline: none
        -moz-appearance: none
        -webkit-appearance: none
        margin-top 15px
        border-radius 5px
        color white
        background-color color-dark-bg
        cursor pointer
        padding 5px 10px
        text-transform: uppercase

    label
        vertical-align: middle
        margin-right 5px

    input
        text-align: center
        padding 0
        margin 0

    input[type=number]
        -webkit-appearance: none
        background: transparent
        outline: none
        border none

    input[type=checkbox]:checked
        background-color: color-dark

    input[type=checkbox]
        -webkit-appearance: none
        background: transparent
        outline: none
        border none
        margin-right 20px
        border: 1px solid color-dark;
        height 1em
        width: 1em
        vertical-align: middle

    input[type=number]::-webkit-inner-spin-button
        -webkit-appearance: none;

    input[type=number]::-moz-inner-spin-button
        appearance: none;

    input[type=range]
        -webkit-appearance: none
        width: 100%
        background: transparent
    
    input[type=range]:focus
        outline: none

    input[type=range]::-webkit-slider-thumb
        -webkit-appearance: none;
        height: thumb-height
        width: thumb-width
        background: color-dark
        cursor: pointer;

        margin-top (-0.3 * thumb-height)
        border-radius: 3px;

    /* All the same stuff for Firefox */
    input[type=range]::-moz-range-thumb
        height: thumb-height
        width: thumb-width
        background: color-dark
        cursor: pointer;

        border-radius: 3px;

    input[type=range]::-webkit-slider-runnable-track
        height: track-height
        width: 100%;
        background: track-color 
        cursor: pointer;

        margin-bottom 8px
 
    input[type=range]::-moz-range-track
        height: track-height
        width: 100%;
        background: track-color 
        cursor: pointer;
